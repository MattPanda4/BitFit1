<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/RecordFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:text="@string/record_this_food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="recordFoodButton"/>

    <TextView
        android:id="@+id/theFoodName"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:text="@string/food"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/FoodNameInput"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theCalorieAmount"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="@string/calories"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/RecordFoodButton"
        app:layout_constraintEnd_toStartOf="@id/calorieInput"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theFoodName"
        app:layout_constraintVertical_bias="0.006" />

    <EditText
        android:id="@+id/FoodNameInput"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="24dp"
        android:hint="@string/enter_food"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/calorieInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/calorieInput"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="124dp"
        android:ems="10"
        android:hint="@string/enter_calories"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/RecordFoodButton"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>